@model OnlineShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-info">Create User </h1>

<form asp-action="Create" method="post" id="user-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-4">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <span class="text-danger">@ViewBag.Message</span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-4">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-4">
                <input asp-for="UserName" class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label >Password</label>
            </div>
            <div class="col-4">
                <input asp-for="PasswordHash" class="form-control" type="password" />
            </div>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-info">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
    $(document).ready(function () {
        $("#user-form").validate({
            rules: {
                FirstName: {
                    required: true,

                },
                LastName: {
                    required: true,

                },
                UserName: {
                    required: true,
                    minlength: 5
                },
                PasswordHash: {
                    required: true,
                    minlength: 6
                },

            },
            messages: {
                FirstName: "Please enter your first name!",
                LastName: "Please enter your last name!",
                UserName: {
                    required: "Please enter user name",
                    minlength: "User name should be at least 5 characters"
                },
                PasswordHash: {
                    required: "Please enter your password",

                    minlength: "Password should be at least 6 alphanumeric characters"
                },

            }
        });
    });
</script>
}

