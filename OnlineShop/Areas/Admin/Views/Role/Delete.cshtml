
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-info">Delete Role </h1>

<form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="id" value="@ViewBag.id" />
        <h3>Are you sure wanted to delete this item?</h3>
        <div class="form-group row">
            <div class="col-2">
                <label>Name</label>
            </div>
            <div class="col-4">
                <input name="name" id="name" value="@ViewBag.name" readonly="readonly" class="form-control" />
                <span class="text-danger">@ViewBag.Message</span>

            </div>


        </div>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
    $(document).ready(function () {
        $("#role-form").validate({
            rules: {
                name: {
                    required: true,
                },
            },
            messages: {
                name: "Please enter your  name!",
            }
        });
    });
    </script>
}


