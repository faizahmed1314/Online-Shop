@model OnlineShop.Areas.Admin.Models.UserRoleVm
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-info">Assign  role </h1>

<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <h3 class="text-danger">@ViewBag.Message</h3>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserId"></label>
            </div>
            <div class="col-4">
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-4">
                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>

            </div>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="AssignUserRole" class="btn btn-info">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



